
@{
	Layout = "~/Views/Shared/_LayoutWithoutVideo.cshtml";
}

<section class="section">
	<div class="container" style="margin-top: 6rem !important;">
		<div class="row">
			<div class="col-12 col-sm-8 col-md-8">
				<div class="card card-primary">
					<div class="card-header"><h3>Forgot Password Confirmation</h3></div>
					<div class="card-body">
						<p>
							A password reset link has been sent to your email <br /><br />
							Click here @Html.ActionLink("[Password reset link]", "ResetPassword", "Account") to Reset your password
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>