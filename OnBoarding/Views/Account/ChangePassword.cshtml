@model OnBoarding.ViewModels.ChangePasswordViewModel
@{
	Layout = "~/Views/Shared/_LayoutWithoutVideo.cshtml";
}
<section class="section">
	<div class="container" style="margin-top: 5rem !important;">
		<div class="row">
			<div class="col-12 col-sm-12 col-lg-8">
				<div class="card card-primary">
					<div class="card-header pb-0"><h3>Your Password has expired. <small><i>Change by providing the old password and entering a new password</i></small></h3></div>
					<div class="card-body pt-0 pb-0">
						@using (Html.BeginForm("ChangeUserPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "changepassword-form", @class = "form-horizontal", role = "form", @style = "display: block;" }))
						{
							<div class="col-12 col-sm-12 col-lg-6">
								@Html.AntiForgeryToken()
								@Html.ValidationSummary(true, "", new { @class = "text-danger" }) <br />
								<div class="form-group">
									@Html.LabelFor(m => m.CurrentPassword)  <br />
									@Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
									@Html.TextBoxFor(m => m.CurrentPassword, new { @class = "form-control", @autocomplete = "off", @placeholder = "Old Password", @Type = "password" })
								</div>
								<div class="form-group">
									@Html.LabelFor(m => m.NewPassword)  <br />
									@Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
									@Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", @autocomplete = "off", @placeholder = "New Password", @Type = "password" })
								</div>
								<div class="form-group">
									@Html.LabelFor(m => m.ConfirmPassword)  <br />
									@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
									@Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @autocomplete = "off", @placeholder = "Confirm Password", @Type = "password" })
								</div>
								<div class="form-group mt-4">
									<button type="submit" name="submit" value="Change Password" class="btn btn-primary btn-md w_full">
										<span class="fa fa-unlock-alt"></span> Change Password
									</button>
								</div>
							</div>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}