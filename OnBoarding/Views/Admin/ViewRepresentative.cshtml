<script src="@Url.Content("~/Assets/fwizard/form-wizard.js")"></script>
<div class="col-md-12 form-wizard">
	<div class="form-group">
		<div class="row">
			<div class="table-responsive">
				<table class="table table-hover">
					<tr class="success">
						<th>Signatory Details:</th>
						<td></td>
						<td style="text-align: right;"><i class="fa fa fa-user fa-x"></i></td>
					</tr>
					<tr>
						<td id="Signatories" name="Signatories">
							<table class="custom-table">
								<th> Full Names</th>
								<th> Mobile Number </th>
								<th> Email Address </th>
								<th> Trading Limit </th>
								<th> EMT SignUp </th>
								<th> Sign-Up Date </th>
								<th> Signature </th>
								<tbody>
									<td>@(ViewBag.RepresentativeInfo.Surname + " " + ViewBag.RepresentativeInfo.Othernames)</td>
									<td>@ViewBag.RepresentativeInfo.Mobile</td>
									<td>@ViewBag.RepresentativeInfo.Email</td>
									<td>@ViewBag.RepresentativeInfo.TradingLimit</td>
									<td>@ViewBag.RepresentativeInfo.EMarketSignUp</td>
									<td>@ViewBag.RepresentativeInfo.DateCreated</td>
                                    <td>
                                        @if (ViewBag.RepresentativeInfo.Signature == null || ViewBag.RepresentativeInfo.Signature == "")
                                        {
                                            <img width="100" height="80" src="~/Content/images/signatures/no-signature-17.jpg" />
                                        }
                                        else
                                        {
                                            <img width="100" height="80" src="~/Content/images/signatures/@ViewBag.RepresentativeInfo.Signature" />
                                        }
                                    </td>
								</tbody>
							</table>
						</td>
					</tr>
					<tr class="success">
						<th></th>
						<td></td>
						<td style="text-align: right;"></td>
					</tr>
				</table>
			</div>
		</div>
	</div>
</div>