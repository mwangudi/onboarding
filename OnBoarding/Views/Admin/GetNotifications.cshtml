@model IEnumerable<OnBoarding.ViewModels.SystemNotificationsViewModel>
<div class="row">
	<div class="col-md-12">
		<table id="NotificationList" class="display nowrap m_top_10" style="width:100%">
			<thead>
				<tr>
					<th>Type</th>
					<th>From</th>
					<th>Recepient</th>
					<th>Status</th>
					<th>Date Created</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
				<tr>
					<td> @item.Type</td>
					<td> @item.From</td>
					<td> @item.To</td>
					<td>@(item.Sent ? "Sent" : "Failed")</td>
					<td> @item.DateCreated</td>
					<td>
						<center>
							<button data-id='@item.Id' type="submit" name="submit" class="btn btn-primary btn-md btn-agent-id w_full">
								<span class="glyphicon glyphicon-edit"></span> Resend
							</button>
						</center>
					</td>
				</tr>
				}
			</tbody>
		</table>
	</div>
</div>
<!--Start Confirm Delete Modal -->
<div class="modal fade" id="LoadDeleteModal" role="dialog" aria-labelledby="LoadDeleteModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="t_aling_c"><i class="fa fa-warning" style="font-size:30px; color:red"></i> Resend Email Notification </h5>
			</div>
			<div class="students-data"></div>
			<div class="modal-footer">
				<div class="col-lg-12">
					<center class="m_top_10">
						<b>Global Markets Onboarding  &copy; Stanbic Bank Kenya</b>
					</center>
				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function () {
		//Function Load modal
		function LoadUpModal(getNotificationId) {
			$('#LoadDeleteModal').modal({ backdrop: 'static', keyboard: false });
			$.ajax({
				type: "POST",
				url: "/Admin/LoadResendNotification",
				data: '{getNotificationId: "' + getNotificationId + '" }',
				contentType: "application/json; charset=utf-8",
				dataType: "html",
				success: function (data) {
					$('.students-data').html(data);
				}
			});
		}

		$('.btn-agent-id').click(function (e) {
			e.preventDefault();
			var getNotificationId = $(this).attr('data-id');
			LoadUpModal(getNotificationId);
		});

		//Load Datatable
		$('#NotificationList').DataTable({
			responsive: true
		});
	});
</script>